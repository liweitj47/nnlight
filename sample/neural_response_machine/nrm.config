[input]
name = source
shape = 3

[input]
name = target
shape = 3

[input]
name = source_mask
shape = 2

[input]
name = target_mask
shape = 2

[layer]
name = encoder
type = gru
x = source
mask = source_mask
hidden = 16

[layer]
name = attention
type = attention_gru
x = target
mask = target_mask
sequential_context = encoder.output
global_context = encoder.last
hidden = 16

[layer]
name = decoder_context
type = concatenate
inputs = [attention.output, attention.context]
axis = 2

[layer]
name = decoder
type = gen_seq_with_context
x = target
mask = target_mask
context = decoder_context

[loss]
name = probability
type = sequential_cross_entropy
predict = decoder
golden = target

[training]
loss = probability
outputs = probability
